<h1>Edit record</h1>

<%= render 'form' %>


<% @graffiti.photos.each do |photo| %>
  <%= form_for([@graffiti, photo]) do |g| %>
  <p>
    <%= g.label :link %>
    <%= g.text_field :link %>
    <%= g.submit('Update') %>
    <%= link_to 'Delete', [photo.graffiti, photo],
                 method: :delete,
                 data: { confirm: 'Are you sure?' } %>
  </p>
  <% end %>
<% end %>


