  <div class="row">
    <div class="large-12 columns">
      <h1>Edit record</h1>
    </div>
  </div>

<%= render 'form' %>

<% @graffiti.photos.each do |photo| %>
  <%= form_for([@graffiti, photo]) do |g| %>
  <div class="row">
    <div class="large-4 medium-4 columns">
      <%= g.label :link %>
      <%= g.text_field :link, size: 35 %>
    </div>
    <div class="large-8 medium-8 columns">
      <%= g.submit('Update', class: 'tiny radius button') %>
      <%= link_to 'Delete', [photo.graffiti, photo],
                   method: :delete,
                   data: { confirm: 'Are you sure?' },
                   class: 'tiny radius button' %>
    </div>
  </div>
  <% end %>
<% end %>


