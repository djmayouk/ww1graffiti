<div class="row">
  <div class="large-12 columns">
    <h1>List of all graffiti</h1>
  </div>
</div>

<div class="row">
    <div class="large-4 medium-4 small-4 columns">
      <strong>Name</strong>
    </div>
    <div class="large-4 medium-4 small-4 columns">
      <strong>Location</strong>
    </div>
    <div class="large-4 medium-4 small-4 columns">
      <strong>Actions</strong>
    </div>
  </div>

 <% @graffitis.each do |graffiti| %>
  <div class="row">
    <div class="large-4 medium-4 small-4 columns">
      <%= graffiti.surname %>, <%= graffiti.forenames %>
    </div>
    <div class="large-4 medium-4 small-4 columns">
      <%= graffiti.location %>
    </div>
    <div class="large-4 medium-4 small-4 columns">
      <%= link_to 'See full record', graffiti_show_path(graffiti), class: 'small radius button' %>
      <%= link_to 'Edit', edit_graffiti_path(graffiti), class: 'small radius button' %></td>
    </div>
  </div>
 <% end %>

<div class="row">
  <div class="large-12 columns">
    <%= link_to 'Add a record', new_graffiti_path, class: 'small radius button' %>
  </div>
</div>
